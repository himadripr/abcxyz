<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.baseinfotech.juscep.activity.AboutUsActivity">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/webView"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="About Us"/>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="14sp"

                android:text="@string/about_us_top_text"/>

            <TextView
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:text="Who we are?"/>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/who_we_text_view"
                android:textSize="14sp"

                />

            <TextView
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:text="Why to rent construction equipment from us"/>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="14sp"

                android:text="@string/rent_construction_text"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
